    <div style="margin-bottom:5px">
        <label for="mgme_v2_include_act_detail" style="vertical-align:super;">{{localize "MGME.IncludeActionQuestion"}}</label>
        <input name="Include Action" type="checkbox" id="mgme_v2_include_act_detail">
