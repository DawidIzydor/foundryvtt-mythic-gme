<form>
    <div>
        <label for="mgme_export_journal_name" style="vertical-align:super;"></label>
        <input name="Journal Name" type="text" id="mgme_export_journal_name" placeholder="{{defaultJournalName}}">
    </div>
    <div>
        <label for="mgme_export_highlight_flavor" style="vertical-align:super;">{{localize "MGME.JournalHighlightFlavor"}}</label>
        <input checked name="Include Metadata" type="checkbox" id="mgme_export_highlight_flavor">
    </div>
    <div>
        <label for="mgme_export_actor_img" style="vertical-align:super;">{{localize "MGME.JournalIncludeActorImg"}}</label>
        <input name="Include Metadata" type="checkbox" id="mgme_export_actor_img">
    </div>
    <div>
        <label for="mgme_export_include_meta" style="vertical-align:super;">{{localize "MGME.JournalIncludeMeta"}}</label>
        <input name="Include Metadata" type="checkbox" id="mgme_export_include_meta">
    </div>
    <div>
        <label for="mgme_export_clear_chat" style="vertical-align:super;">{{localize "MGME.ClearChatAfterExport"}}</label>
        <input name="Clear Chat" type="checkbox" id="mgme_export_clear_chat">
    </div>
</form>